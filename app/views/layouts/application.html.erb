<!DOCTYPE html>
<html>
  <head>
    <title>yacitaku</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

<script src="https://code.jquery.com/jquery-2.2.4.min.js"></script>

    <%= javascript_pack_tag 'application' %>
    <script type="text/javascript" charset="utf-8" src="https://map.yahooapis.jp/js/V1/jsapi?appid=dj00aiZpPTZYSnkwclN5STRpayZzPWNvbnN1bWVyc2VjcmV0Jng9Yjk-"></script>
    <script src="https://unpkg.com/yahoo-map-cluster@latest/bundle/ymap-cluster.js"></script>
    <script src="https://www.gstatic.com/charts/loader.js"></script>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>

    <header class="head_bar">

      <% if user_signed_in? %>
        <%= t('verb.is_login',name: current_user.user_name.to_s) %>

        <%= link_to t('activerecord.models.user') + t('activerecord.attributes.user.profile'), user_path(current_user.id) %>
        <%= link_to t('verb.logout'), destroy_user_session_path, method: :delete %>

      <% else %>

        <br><br>

        <%= t('verb.is_not_login') %>

        <%= link_to t('verb.login'), new_user_session_path %>
        <%= link_to  t('adjective.newly') + t('activerecord.normal_process.noun.save'), new_user_registration_path %>

      <% end %>

  </header>

  <div id="center_content">

    <div class="main_form">
      <%= yield %>
    </div>

  </div>

  <footer>
  </footer>

  </body>
</html>
